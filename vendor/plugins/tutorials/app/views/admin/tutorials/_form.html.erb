<% form_for [:admin, @tutorial] do |f| -%>
  <%= f.error_messages %>

  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title, :class => 'larger widest' -%>
  </div>

  <div class='clearfix'>
    <div class='hemisquare' style='padding: 0px; margin: 10px 10px 10px 0px'>
      <div class='field'>
        <%= f.label :description -%>
        <%= f.text_area :description, :size => '65x5'  -%>
      </div>
    </div>

    <div class='hemisquare' style='padding: 0px; margin: 10px 0px 10px 60px'>
      <div class='field' style='margin-bottom: 0px'>
        <%= f.label :level -%>
        <%= f.select :level, RefinerySetting.find_or_set(:tutorial_categories, %w(Beginner Intermediate Advanced)),
                     :class => 'widest'-%>
      </div>

      <div class='field' style='margin-bottom: 0px'>
        <%= f.label :tag_list, 'Tags' -%>
        <%= f.text_field :tag_list, :class => 'widest'-%>
      </div>

      <div class='field' style='margin-bottom: 0px'>
        <%= f.label :author, 'Author' -%>
        <%= f.text_field :author, :class => 'widest' -%>
      </div>

      <div class='field'>
        <%= f.check_box :draft %>
        <%= f.label :draft, 'Save as Draft?', :class => 'stripped'%>
      </div>
    </div>
  </div>

  <div class='field'>
    <%= f.label :content -%>
    <%= f.text_area :content, :rows => 20, :class => 'wymeditor widest' -%>
  </div>

  <%= render :partial => "/shared/admin/form_actions",
             :locals => {
               :f => f,
               :continue_editing => true
             } %>

<% end -%>
